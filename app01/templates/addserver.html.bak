{% extends "index.html" %}
{% block page-content %}
<h1 class="page-header">添加主机</h1>
<div>
<form class="form-horizontal" role="form" method='POST'>

  <div class="form-group">
    <label for="inputhostname" class="col-sm-2 control-label">主机名 ：</label>
    <div class="col-sm-10">
<!--	{{form.hostname}} -->
	<input name='hostname'>
    </div>
  </div>

  <div class="form-group">
    <label for="inputip" class="col-sm-2 control-label">IP ：</label>
    <div class="col-sm-10">
<!--          {{form.ip}}   -->
    <input name='ip'>

    </div>
  </div>

  <div class="form-group">
    <label for="inputport" class="col-sm-2 control-label">端口 ：</label>
    <div class="col-sm-10">
   <!--     {{form.port}} -->
     <input name='port'>
    </div>
  </div>
 
   <div class="form-group">
    <label for="inputos" class="col-sm-2 control-label">操作系统 ：</label>
    <div class="col-sm-10">
<!--        {{form.os}}  -->
	<input name='os'>
    </div>
  </div>

  <div class="form-group">
    <label for="inputidc" class="col-sm-2 control-label">idc ：</label>
    <div class="col-sm-10">
  <!--       {{form.idc}}   -->
	<input name='idc'>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
	<input type="submit" vlaue="保存" class="btn btn-primary">
    </div>
  </div>
</form>
</div>
{% endblock %}
